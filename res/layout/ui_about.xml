<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <com.aplex.aplextest.flatui.view.FlatTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/cpu_info"
            android:textSize="20sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
    </LinearLayout>
    
    <!-- 分割线 -->
    <TextView android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    
	<!-- cpu 型号 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <com.aplex.aplextest.flatui.view.FlatTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:text="@string/Model"
            android:textSize="18sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>

        <com.aplex.aplextest.flatui.view.FlatTextView
            android:id="@+id/cpu_model"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="50dp"
            android:text="@string/Model"
            android:textSize="18sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
    </RelativeLayout>
    
    <!-- 分割线 -->
    <TextView android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    
	<!-- cpu 频率-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <com.aplex.aplextest.flatui.view.FlatTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:text="@string/frequency"
            android:textSize="18sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
        
        
        <com.aplex.aplextest.flatui.view.FlatTextView
           	android:id="@+id/frequency"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="50dp"
            android:text="@string/Model"
            android:textSize="18sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
	</RelativeLayout>
	
     <!-- 分割线 -->
    <TextView android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    <!-- cpu hardware-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <com.aplex.aplextest.flatui.view.FlatTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:text="@string/hardware"
            android:textSize="18sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
        
        
        <com.aplex.aplextest.flatui.view.FlatTextView
           	android:id="@+id/hardware"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="50dp"
            android:text="@string/Model"
            android:textSize="18sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
	</RelativeLayout>
	
    <!-- 分割线 -->
    <TextView android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <com.aplex.aplextest.flatui.view.FlatTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/mem_info"
            android:textSize="20sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
    </LinearLayout>
    
     <!-- 分割线 -->
    <TextView android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    
    
    <!-- mem hardware-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <com.aplex.aplextest.flatui.view.FlatTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:text="@string/mem_totalsize"
            android:textSize="18sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
        
        <com.aplex.aplextest.flatui.view.FlatTextView
           	android:id="@+id/mem_total"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="50dp"
            android:text="@string/Model"
            android:textSize="18sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
	</RelativeLayout>
	
    
     <!-- 分割线 -->
    <TextView android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <com.aplex.aplextest.flatui.view.FlatTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/storage_info"
            android:textSize="20sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
    </LinearLayout>
    
    <!-- 分割线 -->
    <TextView android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    <!-- internal hardware-->
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <com.aplex.aplextest.flatui.view.FlatTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:text="@string/emmc_totalsize"
            android:textSize="18sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
        
        <com.aplex.aplextest.flatui.view.FlatTextView
           	android:id="@+id/intarnal_total"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="50dp"
            android:text="@string/Model"
            android:textSize="18sp" >
        </com.aplex.aplextest.flatui.view.FlatTextView>
	</RelativeLayout>
	
	<!-- 分割线 -->
    <TextView android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
</LinearLayout>