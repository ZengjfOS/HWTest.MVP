<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout 
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <com.aplex.aplextest.flatui.view.FlatTextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/memsizeopt"
                android:textSize="18sp"
                flatui:fl_cornerRadius="5dp"
                flatui:fl_fontExtension="ttf"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/sky"/>
        <Spinner
            	android:spinnerMode="dialog"
            	android:gravity="center"
                android:id="@+id/memsize_spinner"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"/>
        
        <com.aplex.aplextest.flatui.view.FlatTextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/memloop"
                android:textSize="18sp"
                flatui:fl_cornerRadius="5dp"
                flatui:fl_fontExtension="ttf"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/sky"/>
        
        <Spinner
            	android:spinnerMode="dialog"
            	android:gravity="center"
                android:id="@+id/looptime_spinner"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                  android:layout_marginTop="0dp"/>
        
        <com.aplex.aplextest.flatui.view.FlatButton
            	android:id="@+id/start_test_btn"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="@string/memstabilitytest"
                android:textSize="25sp"
                flatui:fl_cornerRadius="5dp"
                flatui:fl_fontExtension="ttf"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/sky"/>
        
        <com.aplex.aplextest.flatui.view.FlatButton
            	android:id="@+id/stop_test_btn"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="@string/stoptest"
                android:textSize="25sp"
                flatui:fl_cornerRadius="5dp"
                flatui:fl_fontExtension="ttf"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/sky"/>
    </LinearLayout>
    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/sky_light" />
	<LinearLayout
	    android:orientation="vertical"
	    android:gravity="center_horizontal"
	    android:layout_weight="3"
	    android:layout_width="0dp"
	    android:layout_height="match_parent">
        <RelativeLayout 
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <com.aplex.aplextest.flatui.view.ColorfulRingProgressView
                android:layout_centerInParent="true"
	            android:id="@+id/crpv"
	            android:layout_width="250dp"
	            android:layout_height="250dp"
	            flatui:bgColor="#e1e1e1"
	            flatui:fgColorEnd="#0e8b9e"
	            flatui:fgColorStart="#b9e4eb"
	            flatui:percent="0"
	            flatui:startAngle="0"
	            flatui:strokeWidth="21dp" />
            <com.aplex.aplextest.flatui.view.FlatTextView
	            android:id="@+id/current_percent"
	            android:layout_width="100dp"
	            android:layout_height="60dp"
	            android:layout_centerInParent="true"
	            android:gravity="center"
	            android:text="@string/percent"
	            android:textSize="25sp"
	            flatui:fl_fontExtension="ttf"
	            flatui:fl_fontFamily="roboto" />
        </RelativeLayout>
	    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sky_light" />
	    <ListView 
	        android:id="@+id/test_result"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
            android:layout_height="350dp">
	    </ListView>
	</LinearLayout>
</LinearLayout>
